<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <include
        android:id="@+id/search_bar_comment"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        layout="@layout/search_bar"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <include
        android:id="@+id/first_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/comment_block"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/search_bar_comment"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <include
        android:id="@+id/second_comment"
        layout="@layout/comment_block"
        android:layout_width="match_parent"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/first_comment"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"

        />
    <include
        android:id="@+id/third_comment"
        layout="@layout/comment_block"
        android:layout_width="match_parent"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/second_comment"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <include
        android:id="@+id/fourth_comment"
        layout="@layout/comment_block"
        android:layout_width="match_parent"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/third_comment"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
